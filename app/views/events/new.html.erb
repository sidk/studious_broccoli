<%= form_for @event, url: {action: "create"}, html:{class: "nifty_form"} do |f| %>
  <%= f.text_field :name %>
  <%= f.fields_for :event_artists do |event_artist_form| %>
     <%= event_artist_form.select(:artist_id, options_from_collection_for_select(Artist.all, "id", "name")) %> 
  <br />
  <% end %>
  <%= f.submit "Create" %><br />
<% end %>
